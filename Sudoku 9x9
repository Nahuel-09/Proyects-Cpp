#include <iostream>
#include <cstdlib>
#include <ctime>
using namespace std;

void ShowTable(int tabla[9][9]) {
    for (int i = 0; i < 9; i++) {
        if (i % 3 == 0) cout << "+-------+-------+-------+\n";
        for (int j = 0; j < 9; j++) {
            if (j % 3 == 0) cout << "| ";
            cout << (tabla[i][j] ? tabla[i][j] : 0) << " ";
        }
        cout << "|\n";
    }
    cout << "+-------+-------+-------+\n";
}

bool Safe(int tabla[9][9], int fila, int col, int num) {
    int filarea = fila - fila % 3, colarea = col - col % 3;
    for (int x = 0; x < 9; x++) {
        if (tabla[fila][x] == num || tabla[x][col] == num || tabla[filarea + x / 3][colarea + x % 3] == num) 
            return false;
    }
    return true;
}

void seedRandomNumbers(int tabla[9][9], int count = 17) {
    while (count > 0) {
        int fila = rand() % 9, col = rand() % 9, num = rand() % 9 + 1;
        if (tabla[fila][col] == 0 && isSafe(tabla, fila, col, num)) {
            tabla[fila][col] = num;
            count--;
        }
    }
}

bool Solve(int tabla[9][9]) {
    for (int fila = 0; fila < 9; fila++) {
        for (int col = 0; col < 9; col++) {
            if (tabla[fila][col] == 0) {
                for (int num = 1; num <= 9; num++) {
                    if (isSafe(tabla, fila, col, num)) {
                        tabla[fila][col] = num;
                        if (Solve(tabla)) return true;
                        tabla[fila][col] = 0;
                    }
                }
                return false;
            }
        }
    }
    return true;
}

int main() {
    srand(time(NULL));
    int table[9][9] = {0};

    seedRandomNumbers(table);

    cout << "Tablero incompleto :v \n";
    showTable(table);

    if (Solve(table)) {
        cout << "Se pudo resolver el tablero >:'D \n";
        showTable(table);
    } else {
        cout << "El tablero no se puede completar jefe D: \n";
    }

    cout << "By Rodrigo Nahuel LopÃ©z Garcete :v";
}
